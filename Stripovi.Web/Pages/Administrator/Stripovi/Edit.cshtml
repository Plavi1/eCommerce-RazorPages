@page
@model Stripovi.Web.Pages.Administrator.Stripovi.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
    var photoPath = "~/images/" + (Model.Strip.imgRoute ?? "noimage.jpg");
}

<h1 style="color:#E84545">Promeni</h1>

<h4>Strip</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <input hidden asp-for="Strip.imgRoute" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Strip.IdStripa" />
            <div class="form-group">
                <label asp-for="Strip.Naziv" class="control-label"></label>
                <input asp-for="Strip.Naziv" class="form-control" />
                <span asp-validation-for="Strip.Naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Strip.Naslov" class="control-label"></label>
                <input asp-for="Strip.Naslov" class="form-control" />
                <span asp-validation-for="Strip.Naslov" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Strip.Izdavac" class="control-label"></label>
                <input asp-for="Strip.Izdavac" class="form-control" />
                <span asp-validation-for="Strip.Izdavac" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Strip.Stanje" class="control-label"></label>
                <input asp-for="Strip.Stanje" class="form-control" />
                <span asp-validation-for="Strip.Stanje" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Strip.Jezik" class="control-label"></label>
                <input asp-for="Strip.Jezik" class="form-control" />
                <span asp-validation-for="Strip.Jezik" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Strip.GodinaIzdanja" class="control-label"></label>
                <input asp-for="Strip.GodinaIzdanja" class="form-control" />
                <span asp-validation-for="Strip.GodinaIzdanja" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Strip.Cena" class="control-label"></label>
                <input asp-for="Strip.Cena" class="form-control" />
                <span asp-validation-for="Strip.Cena" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <div class="custom-file">
                        <input asp-for="Photo" class="custom-file-input form-control">
                        <label class="custom-file-label">Klikni ovde da bi promenio sliku</label>
                    </div>
                </div>
            </div>
            <div class="form-group row col-sm-4 offset-4">
                <img class="imageThumbnail" src="@photoPath" asp-append-version="true" />
            </div>
            <div class="form-group">
                <input type="submit" value="Sacuvaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Nazad na listu</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
